body {
	background-color: #222;
	background: url("/images/img-noise-361x370.png");
}

body {
	font-family: "Verdana" serif;
	font-size: 100%;
}

#login_page {
	margin: 20px;
	border: 1px solid #ccc;
	border-radius: 20px;
	text-align: center;
	background-color: #eee;
}

#page_title {
	display: inline-block;
	width: 75px;
}

h2 {
	font-size: 150%;
}

.page_summary {
	
}

#top_menu {
	font-weight: bold;
	padding: 10px 0 10px 20px;
	
	/* IE10+ */ 
	background-image: -ms-linear-gradient(top, #DDDDDD 0%, #222 100%);

	/* Mozilla Firefox */ 
	background-image: -moz-linear-gradient(top, #DDDDDD 0%, #222 100%);

	/* Opera */ 
	background-image: -o-linear-gradient(top, #DDDDDD 0%, #222 100%);

	/* Webkit (Safari/Chrome 10) */ 
	background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, #DDDDDD), color-stop(100, #222));

	/* Webkit (Chrome 11+) */ 
	background-image: -webkit-linear-gradient(top, #DDDDDD 0%, #222 100%);

	/* W3C Markup */ 
	background-image: linear-gradient(to bottom, #DDDDDD 0%, #222 100%);
}

#add_task_button {
	font-weight: bold;
}

#headshot_filters {
	padding-left: 50px;
}

.enlargeable:hover {
	transform:scale(1.1,1.1);
	transform-origin:0 0;
}

.headshot_filter {
	margin: 0 5px;
}

#content {
	margin-left: 50px;
	margin-right: 50px;
	margin-top: 10px;
}

.notification {
	padding: 10px;
	font-family: Verdana, sans-serif;
	color: #222;
	font-weight: bold;
	background-color: #393;
	
	border-radius: 15px 15px 15px 15px;
	-moz-border-radius: 15px 15px 15px 15px;
	-webkit-border-radius: 15px 15px 15px 15px;
	border: 0px solid #000000;
	margin-bottom: 10px;
}

.modal-body {
	max-height: 700px;
}

.modal-header {
	padding: 0 15px;
}

.frozen-field {
	margin:15px 0;
}

.radio_group {
	display: inline-block;
	margin: 0 10px;
}

.radio_label {
	display: inline;
}

.initials_field {
	width: inherit;
	text-transform: uppercase;
}

.received_by_updater {
	width: inherit;
}

td, th {
	text-align: left;
}

th, .field_header {
	font-size: 80%;
	color: #999999;
	font-weight: bold;
}

.table-hover tbody tr:hover > th {
	background-color: inherit;
}

table {
	border-radius: 15px 15px 0px 0px;
	-moz-border-radius: 15px 15px 0px 0px;
	-webkit-border-radius: 15px 15px 0px 0px;
	border: 0px solid #000000;
	background-color: #ddd;
}

table.task_table {
	min-width: 1000px;
	border-spacing: 0
}

.points_table td {
	padding: 17px;
	font-size: 175%;
	font-weight: bold;
}

.table td {
	border-top: 1px solid #ccc;
}

caption, h2, .page_summary {
	margin-bottom: 10px;
	text-align: left;
	color: #999999;
	font-weight: bold;
}

.task_row:hover {
	cursor: url(<%= asset_path 'magnifying_glass_icon.png' %>), zoom-in;
}

.initials_updater {
	background-color:#ccc !important;
	font-weight: bold;
	color: #222;
	visibility: hidden;
}

.task_suggestion {
	cursor: pointer;
	color: #0b0;
}

.task_suggestion:hover {
	color: #0b0;
}

.cell_large {
	max-width: 210px;
}

.cell_medium {
	max-width: 150px;
}

.cell_small {
	max-width: 70px;
}

.banner_timestamp {
	display: inline-block;
	width: 65px;
}

.banner_comment_body {
	display: inline-block;
	color: #393;
	font-weight: bold;
}

#comments {
	background-color: #ddd;
	margin-bottom: 25px;
}

#comments td {
	padding: 15px;
}

.comment_date_header {
	background-color: #aaa;
}

#comment_text_field {
	width: inherit;
}

.comment_body {
	padding-right: 35px;
}

.comment_timestamp {
	font-size: 75%;
	color: #999999;
}

#footer {
	padding: 10px;
	color: #999999;
	font-size: 90%;
}