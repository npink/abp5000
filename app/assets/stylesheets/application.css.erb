body {
	font-family: "Verdana" serif;
	font-size: 100%;
}

#page_title {
	display: inline-block;
	width: 75px;
}

h2 {
	font-size: 120%;
}

#top_menu {
	font-weight: bold;
	padding: 10px;
	background-color: #eee;
	border-bottom: 1px solid #bbb;
}

#add_task_button {
	font-weight: bold;
}

#content {
	margin-left: 50px;
	margin-right: 50px;
	margin-top: 10px;
}

.alert {
	width: 100%;
	padding: 10px;
}

.modal-body {
	max-height: 700px;
}

.modal-header {
	padding: 0 15px;
}

.frozen-field {
	margin:15px 0;
}

.radio_group {
	display: inline-block;
	margin: 0 10px;
}

.radio_label {
	display: inline;
}

.initials_field {
	width: inherit;
	text-transform: uppercase;
}

th {
	background-color: #eee;
}

td, th {
	text-align: left;
}

th, .field_header {
	font-size: 80%;
	color: #999999;
	font-weight: bold;
}

table.task_table {
	min-width: 1000px;
}

caption, h2 {
	margin-bottom: 10px;
	text-align: left;
	color: #999999;
	font-weight: bold;
}

.task_row {
	cursor: url(<%= asset_path 'magnifying_glass_icon.png' %>), zoom-in;
}

.cell_large {
	max-width: 210px;
}

.cell_medium {
	max-width: 150px;
}

.cell_small {
	max-width: 70px;
}

.date_row > th:hover {
  background-color: #eee !important;
}

#comment_text_field {
	width: inherit;
}

.comment_body {
	padding-right: 35px;
}

.comment_row > td {
 padding-bottom: 15px;
}

.comment_timestamp {
	font-size: 60%;
	color: #999999;
}

#footer {
	background-color: #eee;
	padding: 10px;
	color: #999999;
	font-size: 70%;
	border-top: 1px solid #aaa;
	border-bottom: 1px solid #aaa;
}