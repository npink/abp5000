
.modal-dialog
	.modal-content
		= form_for @task, url: {action: 'update'} do |f|
			.modal-header
				%h4.modal-title Edit Task
			
			.modal-body
			
				- @f = f
				= render "task_fields"	
				
			.modal-footer
				%input.btn.btn-primary{'type' => 'submit'}
				%button.btn.btn-default{'data-dismiss' => 'modal'} Cancel
				%button.delete_task_button.btn.btn-danger{'data-task-id' => @task.id} Destroy Task