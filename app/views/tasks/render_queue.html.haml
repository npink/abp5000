%table.queue_table.table.table-hover.table-bordered
	%caption Task Queue
	%br
	%thead
		%tr
			%th
				Client Name
			%th
				Priority
			%th
				Duration
			%th
				Summary
			%th
				Responsible
			%th
				Done?
			%th
				Due
			%th
			
	%tbody		
		- @queue.each do |t|
			%tr
				%td= t.client_name
				%td= t.priority
				%td= render_duration(t.duration)
				%td= t.summary
				%td
					= render_headshot(t.delegated_to)
					= initials_field_tag('delegated_to', t)

					
				%td= initials_field_tag('completed_by', t)
				%td= render_due_date(t.due_date)
				%td
					= image_tag('edit_icon.png', {:class => 'edit_icon', 'data-task-id' => t.id} )
					= image_tag('delete_icon.png', {:class => 'delete_icon', 'data-task-id' => t.id} )


%br
%table.table.table-hover.table-bordered
	%caption Tasks Done Today
	%br
	%thead
		%tr
			%th
				Client Name
			%th
				Duration
			%th
				Summary
			%th
				Responsible
			%th
				Done?
	%tbody
		- @tasks_done_today.each do |t|
			%tr
				%td= t.client_name
				%td= render_duration(t.duration)
				%td= t.summary
				%td
					= render_headshot(t.delegated_to)
					= initials_field_tag('delegated_to', t)
				%td
					= render_headshot(t.completed_by)
					= initials_field_tag('completed_by', t)		