%table.queue_table.table.table-hover.table-bordered.task_table
	%caption
		= "Dashboard - #{@tasks_due_soon.count} tasks due soon and #{@tasks_older_than_a_week.count} tasks older than a week"
	%thead
		%tr
			%th.cell_large
				Client/Task Name
			%th.cell_small
				Pri.
			%th.cell_small
				Size
			%th.cell_large
				Notes
			%th.cell_small
				Respon.
			%th.cell_small
				= image_tag('neXt_X.png', width: '25')
			%th.cell_medium
				Due Date
			%th.cell_medium
				Created
	%tbody		
		- @tasks.each do |t|
			%tr.task_row{'data-task-id' => t.id}
				%td.cell_large= t.client_name
				%td.cell_small= render_priority(t.priority)
				%td.cell_small= render_duration(t.duration)
				%td.cell_large= render_summary(t.summary)
				%td.cell_small= render_task_initials_field(t, 'delegated_to')
				%td.cell_small= render_task_initials_field(t, 'completed_by')
				%td.cell_medium= render_due_date(t.due_date)
				%td.cell_medium= "#{distance_of_time_in_words_to_now(t.created_at)} ago"