%table.table.table-hover.table-bordered.task_table
	%caption Task History (last 30 days)
	%br
	%thead
		%tr
			%th
				Client
			%th
				Diff.
			%th
				Summary
			%th
				Resp.
			%th
				Done?
			%th
				Created
			%th
				Completed
	%tbody
		- @task_history.each do |t|
			%tr
				%td= t.client_name
				%td= render_duration(t.duration)
				%td= t.summary
				%td 
					= render_headshot(t.delegated_to)
					= t.delegated_to
				%td
					= render_headshot(t.completed_by)
					= t.completed_by
				%td= t.created_at.strftime("%a, %m-%d")
				%td= t.completed_on.strftime("%a, %m-%d")